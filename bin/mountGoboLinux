#!/bin/sh

cdrom=/Mount/CD-ROM

# Make sure we have a sane dependencies file
libdir=/lib/modules/
moddir=/System/Kernel/Modules/
mount -t tmpfs none /tmp; cp -r $libdir/$(uname -r) /tmp
mount -t tmpfs none $libdir; mv /tmp/$(uname -r) $libdir
mount -o bind $libdir $moddir
depmod

# Scan for devices
mount -t sysfs none /sys
mdev -s

# Try IDE CDROMs
if [ -d /proc/ide ]
then
   for d in /proc/ide/hd*
   do
      type=`cat $d/media`
      if [ "$type" = "cdrom" ]
      then
         devname=`basename $d`
         device="/dev/$devname"
         mount -t iso9660 "$device" "$cdrom" 2> /dev/null
         if [ $? = 0 ]
         then
            # Check for squashfs
            ls $cdrom/*.squashfs > /dev/null 2> /dev/null && exit 0
            umount "$cdrom"
         fi
      fi
   done
fi

# Ok, try SCSI drives
for device in /dev/sr* /dev/scd*
do
   [ -z "$device" ] && continue
   mount -t iso9660 "$device" "$cdrom" 2> /dev/null
   if [ $? = 0 ]
   then
      # Check for squashfs
      ls $cdrom/*.squashfs > /dev/null  2> /dev/null && exit 0
      umount "$cdrom"
   fi
done

echo "Wait for USB bus to stabilize..."
modprobe usbcore
find /lib/modules/`uname -r`/kernel/drivers/usb -name "*hci*" | while read modname
do
    module=$(basename $modname | cut -d. -f1)
    modprobe $module
done
modprobe usb-storage
modprobe uas

for i in `seq 11`
do
   if dmesg | grep -q "removable disk"
   then break
   else sleep 1
   fi
done

# Ok, try SCSI drives (for USB and USB flash)
for device in /dev/sr* /dev/scd* /dev/sd*
do
   [ -z "$device" ] && continue
   mount -t iso9660 "$device" "$cdrom" 2> /dev/null
   if [ $? = 0 ]
   then
      # Check for squashfs
      ls $cdrom/*.squashfs > /dev/null  2> /dev/null && exit 0
      umount "$cdrom"
   fi
done

echo "Opps. Can't mount fs.  Please mount on $cdrom"
/bin/ash
